generator client {
  provider = "prisma-client-js"
  output   = "../app/generated/prisma"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model User {
  id               String           @id @default(cuid())
  email            String           @unique
  password         String
  credentials      Credential[]
  twoFactorSecret  String?
  twoFactorEnabled Boolean          @default(false)
  createdAt        DateTime         @default(now())
  TwoFAChallenge   TwoFAChallenge[]
}

model Credential {
  id        String   @id @default(cuid())
  userId    String
  service   String
  username  String
  password  String
  createdAt DateTime @default(now())

  user User @relation(fields: [userId], references: [id])
}

model TwoFAChallenge {
  id         String   @id @default(cuid())
  userId     String
  code       String // TOTP, numeric code, or random token
  isVerified Boolean  @default(false)
  createdAt  DateTime @default(now())
  expiresAt  DateTime
  ipAddress  String? // Optional: log for audit
  userAgent  String? // Optional: better audit trail
  method     String // e.g., "TOTP", "email", "webauthn"

  user User @relation(fields: [userId], references: [id])

  @@index([userId])
  @@index([createdAt])
}
